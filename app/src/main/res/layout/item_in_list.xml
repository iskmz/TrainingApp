<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/layTableHeaders"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal"
    android:background="#000000"
    android:layoutDirection="ltr"
    android:textDirection="ltr"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/txtDateValue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:layout_weight="1"
        android:text="yyyy.MM.dd"
        android:textAllCaps="false"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:gravity="center"
        android:textSize="14sp"
        android:textColor="#7fffffff"/>

    <LinearLayout
        android:background="#ffffff"
        android:layout_width="1dp"
        android:layout_height="match_parent"/>

    <TextView
        android:id="@+id/txtTreadmillValue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:maxLines="2"
        android:text="00.0/000"
        android:textAllCaps="false"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:gravity="center"
        android:textSize="14sp"
        android:textColor="#ffffffff"/>

    <LinearLayout
        android:background="#ffffff"
        android:layout_width="1dp"
        android:layout_height="match_parent"/>

    <TextView
        android:id="@+id/txtPushupsValue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:maxLines="2"
        android:text="000"
        android:textAllCaps="false"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:gravity="center"
        android:textSize="14sp"
        android:textColor="#ffffffff"/>


    <LinearLayout
        android:background="#ffffff"
        android:layout_width="1dp"
        android:layout_height="match_parent"/>

    <TextView
        android:id="@+id/txtOtherNA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:maxLines="2"
        android:text="N/A"
        android:textAllCaps="false"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:gravity="center"
        android:textSize="14sp"
        android:textColor="#66ffffff"
        android:visibility="visible"/>

    <ImageView
        android:id="@+id/imgOtherShow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_weight="1"
        android:src="@drawable/ic_eye_cyan"
        android:layout_gravity="center"
        android:visibility="gone"/>



</LinearLayout>