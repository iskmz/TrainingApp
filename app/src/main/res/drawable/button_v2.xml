<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Outside border/shadow -->
    <item>
        <shape android:shape="oval">
            <stroke android:color="#790901" android:width="3dp"/>
            <size
                android:width="200dp"
                android:height="200dp" />
        </shape>
    </item>

    <!-- Inset -->
    <item
        android:top="3dp"
        android:left="2dp"
        android:right="3dp"
        android:bottom="2dp">
        <shape android:shape="oval">
            <gradient
                android:angle="45"
                android:startColor="#474141"
                android:endColor="#000000" />
        </shape>
    </item>


</layer-list>