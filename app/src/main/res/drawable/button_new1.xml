<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Outside border/shadow -->
    <item>
        <shape android:shape="rectangle">

            <size
                android:width="200dp"
                android:height="200dp" />
            <gradient
                android:angle="135"
                android:startColor="#8BC34A"
                android:endColor="#4CAF50" />
        </shape>
    </item>

    <!-- Inset -->
    <item
        android:top="1dp"
        android:left="1dp"
        android:right="1dp"
        android:bottom="1dp">
        <shape android:shape="rectangle">

            <gradient
                android:angle="45"
                android:endColor="#4CAF50"
                android:startColor="#033A05" />
        </shape>
    </item>


</layer-list>