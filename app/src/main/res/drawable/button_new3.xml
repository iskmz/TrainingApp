<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Outside border/shadow -->
    <item>
        <shape android:shape="rectangle">

            <size
                android:width="200dp"
                android:height="200dp" />
            <gradient
                android:angle="135"
                android:startColor="#F44336"
                android:endColor="#FF5722" />
        </shape>
    </item>

    <!-- Inset -->
    <item
        android:top="1dp"
        android:left="1dp"
        android:right="1dp"
        android:bottom="1dp">
        <shape android:shape="rectangle">

            <gradient
                android:angle="45"
                android:endColor="#FF5722"
                android:startColor="#770D06" />
        </shape>
    </item>


</layer-list>